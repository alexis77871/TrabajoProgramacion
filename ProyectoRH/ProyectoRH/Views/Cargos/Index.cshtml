    <div class="panel-heading table-dark">
        <h3>Cargos</h3><form action="Index" method="post"></form><h3 class="text-right"></h3>
        <form action="Index" method="post">
            @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </form>
    </div>
    </div>
    <table class="table table-dark  table-bordered table-hover specialCollapse">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CodigoCargo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CodigoCargo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CodigoCargo })
                </td>
            </tr>
        }

